<h1>Edit <%= @song.title %></h1>

<form action="/songs/<%= @song.id %>" method="POST">
  <label for="title">Title</label>
  <input type="text" name="song[title]" id="title" value="<%= @song.title %>"></input>

  <label for="artist">Artist</label>
  <input type="text" name="song[artist]" id="artist" value="<%= @song.artist %>"></input>

  <label for="genre">Genre</label>
  <input type="text" name="song[genre]" id="genre" value="<%= @song.genre %>"></input>

  <label for="length">Length</label>
  <input type="text" name="song[length]" id="length" value="<%= @song.length %>"></input>

  <label for="album">Album</label>
  <input type="text" name="song[album]" id="album" value="<%= @song.album %>"></input>
  <br>
  <input type="submit" value="Save Changes">
</form>
